
pipeline {
    agent any
    options {
        skipStagesAfterUnstable()
    }
    environment {
    	registry = '531185373103.dkr.ecr.us-east-1.amazonaws.com/my-first-ecr-repo'
    	registryCredential = 'ID_OF_MY_AWS_JENKINS_CREDENTIAL'
    	dockerImage = ''
  }
    stages {
         stage('Clone repository') { 
            steps { 
                script{
                checkout scm
                }
            }
        }

        stage('Build') { 
            steps { 
                script{
                	app= docker.build('service1.app')
                }
            }
        }
        stage('Test'){
            steps {
                 echo 'Empty'
            }
        }
        stage('Push') {
            steps {
                script{
                        docker.withRegistry('https://531185373103.dkr.ecr.us-east-1.amazonaws.com', 'ecr:us-east-1:aws-credentials') {
                    	app.push("${env.BUILD_NUMBER}")
                    	app.push("latest")
                    }
                }
            }
        }
        stage('Deploy'){
            steps {
                 sh 'kubectl apply -f deployment.yml'
            }
        }
        stage('SonarQube analysis') {
            steps {
                script{
                def scannerHome = tool 'sonarscan';
                withSonarQubeEnv('sonarqube') {
                    sh "${tool("sonarscan")}/bin/sonar-scanner \
                        -Dsonar.projectKey=app \
                        -Dsonar.projectName=app"
                    }
                }
            }
        }

    }
}
        
